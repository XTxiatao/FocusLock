<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:padding="24dp">

    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_hourglass"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:gravity="center_vertical"
        android:text="@string/lock_countdown_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/overlayReminderRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/countdownText"
        app:layout_constraintBottom_toTopOf="@+id/addReminderFab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/overlayReminderEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_empty_state"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/overlayReminderRecycler"
        app:layout_constraintBottom_toBottomOf="@id/overlayReminderRecycler"
        app:layout_constraintStart_toStartOf="@id/overlayReminderRecycler"
        app:layout_constraintEnd_toEndOf="@id/overlayReminderRecycler" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/forceUnlockButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/force_unlock"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text=""
        android:textAllCaps="false"
        app:backgroundTint="@color/purple_500"
        android:layout_marginBottom="16dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_lock"
        app:iconPadding="0dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openWhitelistButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/open_whitelist_app"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text=""
        android:textAllCaps="false"
        app:backgroundTint="@color/teal_200"
        android:layout_marginBottom="16dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_clover"
        app:iconPadding="0dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addReminderFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/reminder_add_button"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/plan_active_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
