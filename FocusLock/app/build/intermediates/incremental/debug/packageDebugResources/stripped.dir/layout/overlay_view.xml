<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0000000"
    android:padding="24dp">

    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_countdown_label"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/overlayReminderRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/countdownText"
        app:layout_constraintBottom_toTopOf="@+id/forceUnlockButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/overlayReminderEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_empty_state"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/overlayReminderRecycler"
        app:layout_constraintBottom_toBottomOf="@id/overlayReminderRecycler"
        app:layout_constraintStart_toStartOf="@id/overlayReminderRecycler"
        app:layout_constraintEnd_toEndOf="@id/overlayReminderRecycler" />

    <Button
        android:id="@+id/forceUnlockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/force_unlock"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/openWhitelistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_whitelist_app"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
