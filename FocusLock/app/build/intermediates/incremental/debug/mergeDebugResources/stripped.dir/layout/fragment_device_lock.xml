<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_background_dark"
    android:padding="16dp"
    android:baselineAligned="false">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/planContainer"
        style="@style/Widget.FocusLock.Card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/addPlanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_plan_button"
                android:textAllCaps="false" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scheduleList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:overScrollMode="ifContentScrolls" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tempLockContainer"
        style="@style/Widget.FocusLock.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temporary_lock_section_title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/tempLockButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temporary_lock_button"
                android:textAllCaps="false" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
